<h1>Add Person</h1>
@model Person

<form action="AddPerson" method="post">

    <div class="form-control">

        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" />
    </div>
    <div class="form-control">

        <label asp-for="Age">Age</label>
        <input asp-for="Age" type="number" />
    </div>
    <button type="submit">Add</button>
</form>
